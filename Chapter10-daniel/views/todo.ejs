    <title><%= todoObject.getName() %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <h1><%= todoObject.getName() %></h1>
    <form class="form-inline" action='/todos/update/<%= todoObject.getId() %>' method="POST">
        <input type="text" 
            class="form-control mb-2 mr-sm-2" 
            name="update-todo" 
            value="<%= todoObject.getName() %>"
        >      
        <button type="submit" class="btn btn-primary mb-2">Update Todo</button>
    </form>
    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>       
</body>
</html>